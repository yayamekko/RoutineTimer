<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundColorGray">

    <TextView
        android:id="@+id/routine_task_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/routine_setting_name_title"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/routine_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backGroundColorTask"
        android:padding="16dp"
        android:textSize="18dp"
        android:text="薬を飲む"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/routine_task_name_title" />

    <TextView
        android:id="@+id/routine_task_time_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/routine_setting_time_title"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/routine_task_name" />

    <TextView
        android:id="@+id/routine_task_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backGroundColorTask"
        android:padding="16dp"
        android:textSize="18dp"
        android:text="1分00秒"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/routine_task_time_title" />

</androidx.constraintlayout.widget.ConstraintLayout>